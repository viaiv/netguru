# NetGuru Backend Environment Variables
# Copy this file to .env and fill in your values

# Application
APP_NAME=NetGuru
APP_VERSION=0.1.0
DEBUG=True
ENVIRONMENT=development

# Security
# Generate SECRET_KEY with: openssl rand -hex 32
# Generate FERNET_KEY with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
SECRET_KEY=your_secret_key_here_generate_with_openssl_rand_hex_32
FERNET_KEY=your_fernet_key_here_generate_with_python_cryptography
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL=postgresql+asyncpg://netguru:netguru_dev_password@postgres:5432/netguru
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=0

# Redis
REDIS_URL=redis://redis:6379/0
REDIS_MAX_CONNECTIONS=10

# Celery (for future phases)
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# File Upload
MAX_FILE_SIZE_MB=100
ALLOWED_FILE_EXTENSIONS=pcap,pcapng,txt,conf,cfg,log
UPLOAD_DIR=/app/uploads

# CORS (adjust for production)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Rate Limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=60

# AI Providers (user will provide their own keys)
# These are just defaults for testing
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=

# RAG Settings
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
TOP_K_RESULTS=5

# Vector Store
VECTOR_DIMENSION=384
USE_QDRANT=False
QDRANT_URL=http://localhost:6333

# Monitoring (for future phases)
PROMETHEUS_ENABLED=False
SENTRY_DSN=
